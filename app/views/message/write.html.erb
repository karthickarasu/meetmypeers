


<br/><br/><br/><br/><br/><br/><h3>Meeting Request</h3>
<table cellspacing=10 >
       <%=form_for :message, :url=>{:action=>"sendmessage", :controller=>"message"} do |f|%>
               <tr>
                       <td><%=f.hidden_field :sender, :value=>@sender %></td>
                       <td><%=f.hidden_field :receiver, :value=>@receiver.id %></td>
	       </tr>
              
		       <td><%=f.label :Email,"Email"%></td><br>                       
                       <td><%=@receiver.email %></td><br>
                  
		</tr>

		 <tr>

			<td><%=f.label :FirstName,"FirstName"%></td><br>                     
			<td><%=@receiver.first_name %></td><br>
		 </tr>	


               <tr>
		       <td><%=f.label :subject,"Location"%></td>                        
                       <td><%=f.text_field :subject %></td>
		</tr>
               <tr>
                       <td><%=f.label :message,"Metting purpose"%></td>                        
                       <td><%=f.text_area :message, :size => '5x5'%></td>
               </tr>
               <tr>
                       <td></td><td></td><td></td> 
                       <td colspan=3><%=f.submit 'Send Message'%></td>
               </tr>
       <%end%>
 </table>
